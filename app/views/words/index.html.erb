
  <div class="span6">
    <div id='mywordzies'>
      <h1>Wordzies In Progress</h1>
	      <ul>
					<% if current_user %>
      		<% @words.each do |wordzy| %>
      		<li><%= link_to wordzy.wn_title, show_word_url(wordzy.wn_title) %></li>
      		<% end %>
      	</ul>
	<% else %>
		<% end %>
    </div>
  </div>

<div class="span6">
    <div id='randomwordzies'>
      <h1>Random Wordzies</h1>
	    <ul>
    		<% @suggested_words.each do |word| %>
    			<li><%= link_to word['word'], show_word_url(word['word']) %></li>
    		<% end %>
    	</ul>
			<p class="center"><%= link_to 'I already know these wordzies!', root_url, :class => "btn" %></p>
		  <p class="center"><%= link_to 'I don\'t like these wordzies, suggest new ones!', root_url, :class => "btn btn-danger" %></p>
	  </div>
  </div>


