<!DOCTYPE html>
<html>
<head>
  <title>WORDZIES</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<a href="http://localhost:3000">Home</a> | 
	
	<% if current_user %>
	  Welcome <%= current_user.name %>!
	  <%= link_to "Sign Out", signout_path %>
	<% else %>
	  <%= link_to "Sign in with Twitter", "/auth/twitter" %>
	<% end %>
	

  <div class="container">
    <header id="header">
      <h1><%=  link_to 'Wordzies', root_url %></h1>
      <div id="searchbox">
      	<%= form_tag({:controller => 'words', :action => 'search'}, :method => "get") do %>
      	  <%= text_field_tag(:q,"find a wordzy") %>
      	  <%= submit_tag("Search", :class => "btn-warning btn-large", :id => "addwordzy-btn") %>
      	<% end %>
      </div>
     </header>

<%= yield %>
  </div>
</body>
</html>
